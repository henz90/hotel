<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HotelProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index">HotelProject</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated){
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/ReservationChange">Your Reservations</a>
                            </li>
                        }
                    </ul>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            <br>
        </main>
    </div>
    <br>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - HotelProject - Created by Changmin Zhao and Henry Zakay
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/momentjs/2.14.1/moment.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.37/js/bootstrap-datetimepicker.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.37/css/bootstrap-datetimepicker.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">

    <script>
        //  For Index
        $(function () {
            $('#checkin').datetimepicker({
                format: 'MM/DD/YYYY'
            });
            $('#checkout').datetimepicker({
                format: 'MM/DD/YYYY',
                useCurrent: false //Important! See issue #1075
            });
            $("#checkin").on("dp.change", function (e) {
                newdate = e.date.setDate(e.date.getDate() + 1);
                $('#checkout').data("DateTimePicker").minDate(newdate);   //  FIXME:  Need to add 1 day to the date // Fixed?
            });
            $("#checkout").on("dp.change", function (e) {
                $('#checkin').data("DateTimePicker").maxDate(e.date);
            });
        });

        // For ReservationView
        $('#delete').prop('disabled', true); // To disable initially

        $(document).on('click', '.check', function(){
            if( $('.checks:checked').length > 0 ){
            $('#delete').prop('disabled', false);
        }
        else{
            $('#delete').prop('disabled', true);
        }
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
